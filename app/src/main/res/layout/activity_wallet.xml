<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.Wallet">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDDBDB"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:elevation="0dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/theme_color"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_scrollFlags="scroll|enterAlways">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical|right"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:id="@+id/cartnext1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/nois1"
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="@dimen/_4sdp"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:src="@drawable/ic_assignment_black_24dp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/notificationcount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@+id/nois1"
                                        android:layout_alignRight="@+id/nois1"
                                        android:gravity="center"
                                        android:text="â‚¹ 0"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_15sdp"
                                        android:textStyle="bold"

                                        />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/userLogin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/nois"
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_marginLeft="@dimen/_4sdp"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:src="@drawable/salary" />


                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/login"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:gravity="center_vertical"
                                    android:text="Login"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_10sdp"
                                    android:visibility="gone" />

                                <RelativeLayout
                                    android:id="@+id/cardrelative"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <ImageView
                                        android:id="@+id/cardimage"
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_marginLeft="@dimen/_4sdp"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:backgroundTint="@color/white"
                                        android:src="@drawable/ic_shopping_cart_white_24dp" />

                                    <TextView
                                        android:id="@+id/carddata"
                                        android:layout_width="@dimen/_12sdp"
                                        android:layout_height="@dimen/_12sdp"
                                        android:layout_alignTop="@+id/cardimage"
                                        android:layout_alignRight="@+id/cardimage"
                                        android:background="@drawable/circle_textview"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_8sdp"

                                        />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/getmiihome"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="start|center_vertical"
                            android:src="@drawable/logo"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/getmiihome11"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_gravity="start|center_vertical"

                            android:src="@drawable/logo"
                            android:text="@string/app_name"
                            android:textColor="@color/whiteonly"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                    </FrameLayout>

                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.AppBarLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/linBottomMenu"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/deposit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#0B770F"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_10sdp">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:drawableLeft="@drawable/rupees"

                                        android:gravity="center"
                                        android:text="Deposit"
                                        android:textColor="@color/whiteonly"
                                        android:textSize="@dimen/_10sdp" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/withdraw"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#001AFF"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_10sdp">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:drawableLeft="@drawable/rupees"

                                        android:gravity="center"
                                        android:text="@string/withdraw"
                                        android:textColor="@color/whiteonly"
                                        android:textSize="@dimen/_10sdp" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/share"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="#6C0055"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#8D9105"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_10sdp">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:drawableLeft="@drawable/rupees"

                                        android:gravity="center"
                                        android:text="@string/share"
                                        android:textColor="@color/whiteonly"
                                        android:textSize="@dimen/_10sdp" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/currentBalance"
                            android:padding="@dimen/_7sdp"
                            android:layout_width="match_parent"
                            android:text="Current Balance"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="#B30000"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>




                        <androidx.cardview.widget.CardView
                            android:id="@+id/depositCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@color/whiteonly"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:visibility="gone"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginRight="@dimen/_15sdp">


                                    <EditText
                                        android:id="@+id/amount"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/boarder"
                                        android:digits="0123456789"
                                        android:hint=" Enter Point To Deposit "
                                        android:inputType="phone"
                                        android:paddingStart="@dimen/_10sdp"
                                        android:paddingLeft="5dp"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="7dp"
                                        android:background="@color/whiteonly"
                                        android:text=" Enter Point To Deposit "
                                        android:textColor="#1976D2" />
                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/pay"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="@drawable/rounded_button"
                                    android:gravity="center"
                                    android:text="PAY"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="@drawable/roun"
                                    android:gravity="center"
                                    android:text="Pay with QR Code"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                  />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/withdrawCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@color/whiteonly"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:visibility="gone"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">



                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginRight="@dimen/_15sdp">


                                    <EditText
                                        android:id="@+id/amountWithdraw"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/boarder"
                                        android:digits="0123456789"
                                        android:hint=" Enter Point To Withdraw "
                                        android:inputType="phone"
                                        android:paddingStart="@dimen/_10sdp"
                                        android:paddingLeft="5dp"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />




                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="7dp"
                                        android:background="@color/whiteonly"
                                        android:text=" Enter Point To Withdraw "
                                        android:textColor="#1976D2" />
                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/bank"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:background="@drawable/boarder"
                                    android:gravity="center_vertical"
                                    android:text="Bank"
                                    android:drawableLeft="@drawable/bank"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/payWithdraw"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="@drawable/rounded_button"
                                    android:gravity="center"
                                    android:text="Withdraw"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="@drawable/roun"
                                    android:gravity="center"
                                    android:text="Pay with QR Code"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/shareCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@color/whiteonly"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:visibility="gone"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_60sdp"
                                    android:layout_marginLeft="@dimen/_15sdp"
                                    android:layout_marginRight="@dimen/_15sdp">


                                    <EditText
                                        android:id="@+id/amountShare"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:background="@drawable/boarder"
                                        android:digits="0123456789"
                                        android:hint=" Enter Point To Share "
                                        android:inputType="phone"
                                        android:paddingStart="@dimen/_10sdp"
                                        android:paddingLeft="5dp"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="7dp"
                                        android:background="@color/whiteonly"
                                        android:text=" Enter Point To Share "
                                        android:textColor="#1976D2" />
                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/payShare"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="@drawable/rounded_button"
                                    android:gravity="center"
                                    android:text="Share Points"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_14sdp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@color/whiteonly"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">



                                <TextView
                                    android:id="@+id/walletNotification"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/_20sdp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:text="Pay with QR CodePay with QR CodePay with QR CodePay with QR CodePay with QR CodePay with QR CodePay with QR CodePay with QR CodePay with QR CodePay with QR CodePay with QR CodePay with QR CodePay with QR CodePay with QR Code"
                                    android:textColor="#C80000"
                                    android:textSize="@dimen/_12sdp"
                                    />


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/cantact"
                            android:padding="@dimen/_7sdp"
                            android:layout_width="match_parent"
                            android:text="Any issue Contact Us"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                </androidx.core.widget.NestedScrollView>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linBottomMenu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@color/theme_color"
                    android:elevation="2.0dip"
                    android:paddingTop="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_7sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/linTabHome"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgTabHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/whiteonly"
                            app:srcCompat="@drawable/ic_baseline_home_24" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtTabHome"
                            style="@style/txtOverline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Home"
                            android:textAllCaps="false"
                            android:textColor="@color/whiteonly"
                            android:textSize="@dimen/_10sdp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/offer"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgTabCustom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/whiteonly"
                            app:srcCompat="@drawable/category" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtTabCustom"
                            style="@style/txtOverline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Passbook"
                            android:textAllCaps="false"
                            android:textColor="@color/whiteonly"
                            android:textSize="@dimen/_10sdp"
                            android:tint="@color/gray_text" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/upload"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <FrameLayout
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/circle_red">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgTabBrandFeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_baseline_apps_24"
                                app:tint="@color/whiteonly" />
                        </FrameLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/whishlistbooton"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgTabAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/whiteonly"
